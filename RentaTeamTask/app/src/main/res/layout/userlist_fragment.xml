<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/textViewULP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.843" />

    <Button
            android:text="Load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUL"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewUL" />

    <TextView
            android:text="Info:"
            android:layout_width="182dp"
            android:layout_height="19dp"
            android:id="@+id/textViewUL"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonUL"
            app:layout_constraintHorizontal_bias="0.415"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.936" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewULmain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewULP"
            android:textAlignment="viewStart"
            android:text="Text"
            android:padding="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>