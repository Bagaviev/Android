<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewDist"
            app:layout_constraintTop_toBottomOf="@+id/buttonCity"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.498" />

    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDist"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.11" />

    <TextView
            android:text="Weather data"
            android:layout_width="339dp"
            android:layout_height="96dp"
            android:id="@+id/textViewWeather"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="City data"
            android:layout_width="330dp"
            android:layout_height="112dp"
            android:id="@+id/textViewCity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toBottomOf="@+id/buttonWeather"
            android:layout_marginTop="24dp" />

    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonWeather"
            app:layout_constraintTop_toBottomOf="@+id/textViewWeather"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="16dp" />

    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonCity"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/textViewCity"
            android:layout_marginTop="20dp" />

    <TextView
            android:text="TextView"
            android:layout_width="342dp"
            android:layout_height="82dp"
            android:id="@+id/textViewMatch"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492" />

    <Button
            android:text="Find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMatch"
            app:layout_constraintTop_toBottomOf="@+id/textViewMatch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>