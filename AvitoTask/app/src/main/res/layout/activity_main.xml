<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Weather data"
            android:layout_width="151dp"
            android:layout_height="113dp"
            android:id="@+id/textViewWeather"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" />

    <TextView
            android:text="City data"
            android:layout_width="147dp"
            android:layout_height="112dp"
            android:id="@+id/textViewCity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewWeather"
            app:layout_constraintTop_toTopOf="@+id/textViewWeather" />

    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/buttonWeather"
            app:layout_constraintTop_toBottomOf="@+id/textViewWeather"
            android:layout_marginTop="20dp"
            android:layout_marginStart="64dp" />

    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonCity"
            app:layout_constraintStart_toEndOf="@+id/buttonWeather"
            app:layout_constraintHorizontal_bias="0.658"
            app:layout_constraintTop_toTopOf="@+id/buttonWeather" />

    <TextView
            android:text="Current coords"
            android:layout_width="135dp"
            android:layout_height="109dp"
            android:id="@+id/textViewLocate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCity"
            android:layout_marginTop="80dp" />

    <Button
            android:text="Locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLocate"
            app:layout_constraintTop_toBottomOf="@+id/textViewLocate"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>