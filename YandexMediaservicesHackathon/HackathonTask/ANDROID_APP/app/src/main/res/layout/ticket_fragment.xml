<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Анна-Каренина"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.258" />

    <TextView
            android:text="14 сентябра, 15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="24dp" />

    <TextView
            android:text="Ваш билет"
            android:layout_width="109dp"
            android:layout_height="26dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textStyle="bold"
            android:layout_marginTop="28dp" />

    <ImageView
            android:layout_width="250dp"
            android:layout_height="203dp"
            app:srcCompat="@drawable/ic_ticket"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.496" />

    <Button
            android:text="Смотреть"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/buttonWatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.482"
            android:background="@drawable/rect_button" />

    <TextView
            android:text="Это билет на трансляцию оффлайн мероприятия - это значит, что есть определенное время проведения мероприятия, не пропустите его. Перед началом Вам придет уведомление. Приятного просмотра!"
            android:layout_width="344dp"
            android:layout_height="141dp"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="44dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#101010" />

    <TextView
            android:text="Пока трансялция не началась, будут доступны превью прошедших мероприятий выбранного заведения"
            android:layout_width="331dp"
            android:layout_height="54dp"
            android:id="@+id/textViewInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>