<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eventActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="201dp"
            android:id="@+id/imageViewCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textViewNameCard"
            android:layout_marginTop="20dp" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="163dp"
            android:id="@+id/textViewDescrCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintTop_toBottomOf="@+id/textViewTypeCard"
            android:layout_marginTop="24dp"
            android:background="#FFF8CA"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="5dp"
            android:scrollbars = "vertical"/>

    <TextView
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:id="@+id/textViewDateCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCard"
            android:layout_marginTop="40dp" />

    <TextView
            android:layout_width="112dp"
            android:layout_height="35dp"
            android:id="@+id/textViewTypeCard"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCard"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@+id/textViewDateCard"
            app:layout_constraintEnd_toStartOf="@+id/textViewPriceCard" />

    <TextView
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:id="@+id/textViewPriceCard"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCard"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp" />

    <Button
            android:text="Купить"
            android:layout_width="140dp"
            android:layout_height="49dp"
            android:id="@+id/buttonBuy"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescrCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.473" />

    <TextView
            android:layout_width="291dp"
            android:layout_height="60dp"
            android:id="@+id/textViewNameCard"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>