<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="314dp"
            android:layout_height="271dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.17000002"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            android:background="@color/field_back"
            android:id="@+id/main_l">

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b0" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b1" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b2" />

        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b3" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b4" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b5" />

        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b6" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b7" />

            <Button
                    style="@style/Buttons"
                    android:id="@+id/b8" />

        </TableRow>

    </TableLayout>

    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonS"
            android:backgroundTint="@color/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintVertical_bias="0.58" />

    <TextView
            android:id="@+id/textView3"
            android:background="@color/field_back"
            android:text="Draws:"
            android:layout_width="49dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.458"
            app:layout_constraintStart_toEndOf="@+id/textViewLos"
            app:layout_constraintHorizontal_bias="0.402" />

    <TextView
            android:id="@+id/textViewDraw"
            android:background="@color/field_back"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="0" />

    <TextView
            android:id="@+id/textView2"
            android:background="@color/field_back"
            android:text="Loses:"
            android:layout_width="49dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.458"
            app:layout_constraintStart_toEndOf="@+id/textViewWin"
            app:layout_constraintHorizontal_bias="0.169" />

    <TextView
            android:id="@+id/textViewLos"
            android:background="@color/field_back"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="0" />

    <TextView
            android:id="@+id/textView1"
            android:background="@color/field_back"
            android:text="Wins:"
            android:layout_width="49dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintVertical_bias="0.447" />

    <TextView
            android:id="@+id/textViewWin"
            android:background="@color/field_back"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
            app:layout_constraintVertical_bias="0.453"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="0" />

    <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="255dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_l"
            app:layout_constraintBottom_toTopOf="@+id/buttonS"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.809" />

    <Button
            android:text="WebView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWebView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonS" />

</androidx.constraintlayout.widget.ConstraintLayout>