<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReclineTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pretty_main</item>
        <item name="colorPrimaryVariant">@color/pretty_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/main_background</item>
    </style>

    <style name="Buttons">
        <item name="android:text">""</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/field</item>
        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.ReclineTask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>